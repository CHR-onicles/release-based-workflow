{
  "name": "release-based-workflow",
  "version": "1.2.0",
  "description": "Release-based workflow short course",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bump:patch": "git pull -ff && npm version patch && git push --follow-tags",
    "bump:minor": "git pull -ff && npm version minor && git push --follow-tags",
    "release": "dotenv release-it --dry-run"
  },
  "author": {
    "name": "CHR-onicles"
  },
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.0",
    "dotenv-cli": "^7.4.2",
    "release-it": "^17.9.0"
  }
}
